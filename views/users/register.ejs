<% layout('layouts/boilerplate') %>
<section id="register">
    <div id="register-container">
        <div id="register-box">
            <h1>Register</h1>
            <form action="/register" method="POST">
                <label for="email">Email</label>
                <input class="user-input" type="email" name="email" required>
                <label for="username">Username</label>
                <input class="user-input" type="text" name="username" required>
                <label for="password">Password</label>
                <input class="user-input" type="password" name="password" required>
                <button class="user-btn">Register</button>
            </form>
            <a href="/login" id="login-link">Already registered? Login here</a>
        </div>
    </div>
</section>