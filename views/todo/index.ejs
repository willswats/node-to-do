<% layout('layouts/boilerplate') %>
<section id="todo">
    <div id="todo-container">
        <h1>To Do List</h1>
        <form id="new-inputs" action="/todo" method="POST">
            <input class="priority-input" type="number" name="priority" placeholder="Priority" autocomplete="off">
            <input class="task-input" type="text" name="task" placeholder="New Task" autocomplete="off">
            <div>
                <button class="submit-btn">Submit</button>
            </div>
        </form>
        <% for (let toDo of toDos) { %>
        <div id="todo-item-container">
            <div id="todo-item">
                <% if (toDo.complete === true) { %>
                <p class="complete"><%= toDo.priority %>. <%= toDo.task %></p>
                <% } else { %>
                <p><%= toDo.priority %>. <%= toDo.task %></p>
                <% } %>
            </div>
            <div id="todo-buttons">
                <% if (toDo.complete === false) { %>
                <form action="/todo/<%=toDo._id%>?_method=PUT" method="POST">
                    <button name="complete" value="<%= toDo.complete = true%>" class="complete-btn">Check</button>
                </form>
                <% } else { %>
                <form action="/todo/<%=toDo._id%>?_method=PUT" method="POST">
                    <button name="complete" value="<%= toDo.complete = false%>" class="complete-btn">Un-check</button>
                </form>
                <% } %>
                <a href="/todo/<%= toDo._id %>"><button class="edit-btn">Edit</button></a>
                <form action="/todo/<%= toDo._id %>?_method=DELETE" method="POST">
                    <button class="delete-btn">Delete</button>
                </form>
            </div>
        </div>
        <% } %>
        <% if (toDos.length > 0) { %>
        <form id="delete-all" action="/todo/?_method=DELETE" method="POST">
            <button id="delete-all-btn" onclick="myFunction()">Delete All</button>
        </form>
        <% } %>
    </div>
</section>